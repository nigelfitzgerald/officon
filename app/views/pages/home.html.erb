    <!-- book an office modal -->
    <div class="modal fade" id="bookOffice" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="bookOfficeLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="bookOfficeLabel">Book an office</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
