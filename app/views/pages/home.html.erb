            <%# <button type="button" class="btn btn-primary">Book now!</button> %>
          <%# </div> %>
        </div>
      </div>
    </div>
    <div class="btn-group">
      <a href="#" class="btn btn-danger"  data-bs-toggle="modal" data-bs-target="#rentOffice">Rent an office</a>
      <a href="#" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#login">Login</a>
    </div>
    <!-- rent an office modal -->
    <div class="modal fade" id="rentOffice" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="rentOfficeLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="rentOfficeLabel">Rent an office</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <%= render "form" %>
          </div>
          <%# <div class="modal-footer"> %>
            <%# <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button> %>
            <%# <button type="button" class="btn btn-primary">Book now!</button> %>
          <%# </div> %>
        </div>
      </div>
    </div>
    <!-- login modal -->
    <div class="modal fade" id="login" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="loginLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="loginLabel">Login</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <%# <%= render "devise/shared/new" %>
          </div>
